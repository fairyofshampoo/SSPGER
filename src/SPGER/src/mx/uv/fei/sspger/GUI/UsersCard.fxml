<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox fx:id="boxUser" prefHeight="125.0" prefWidth="322.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.uv.fei.sspger.GUI.controllers.UsersCardController">
   <children>
      <Pane fx:id="pnUsersCard" onMouseClicked="#selectUser" prefHeight="126.0" prefWidth="330.0">
         <children>
            <ImageView fx:id="imgUserIcon" fitHeight="101.0" fitWidth="93.0" layoutX="22.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@resources/userIcon.png" />
               </image>
            </ImageView>
            <Label fx:id="lblFullNameUser" layoutX="133.0" layoutY="30.0" prefHeight="17.0" prefWidth="256.0" text="Nombre Completo del Usuario">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblEMail" layoutX="133.0" layoutY="49.0" prefHeight="17.0" prefWidth="256.0" text="Correo electrónico" />
            <Label fx:id="lblUserType" layoutX="133.0" layoutY="66.0" prefHeight="17.0" prefWidth="178.0" text="Tipo de usuario" />
            <Label fx:id="lblTagOrNumber" layoutX="133.0" layoutY="85.0" prefHeight="17.0" prefWidth="178.0" text="Matrícula o Número Personal" />
         </children>
      </Pane>
   </children>
</HBox>
